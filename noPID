  */

}

void black_or_white(int r[]){
  for(i = 0; i < 4; i++){
    if(r[i] < black[i]){
      white[i] = 0;
    }else{
      white[i] = 1;
    }
  }

}

// e = err; de = derr; 
void pid_controll(int p[]){
  int left = p[1];
  int right = p[2];

  if( left == 1 ){
    digitalWrite(dir_b, 1);
    analogWrite(pwn_b, 255);
    digitalWrite(dir_a, 1);
    analogWrite(pwn_a, 80);
  }else if( right == 1 ){    
    digitalWrite(dir_b, 1);
    analogWrite(pwn_b, 80);
    digitalWrite(dir_a, 1);
    analogWrite(pwn_a, 255);
  }else{
    run();
  }

}

void run(){
  digitalWrite(dir_a, 1);
  analogWrite(pwn_a, 200);
  digitalWrite(dir_b, 1);
  analogWrite(pwn_b, 200);
}

void stop(){
   analogWrite(pwn_a, 255);
   analogWrite(pwn_b, 255);
}
