  int c1;

  black_or_white(a);

   if( white[0] = 1 && white[1] == 0 && white[2] == 0 && white[3] == 1 ){// if a0 = white, a4 = white; use PID control curve and strait line
      c1 = 0;
      pid_controll(white);
    }else{
      c1 = 1;
      stop();
    }

    show_status(c1);

/*
