    if( white[0] = 1 && white[1] == 0 && white[2] == 0 && white[3] == 1 ){// if a0 = white, a4 = white; use PID control curve and strait line
      c1 = 0;
      pid_controll(a);
    }else if( white[0] == 0 && white[1] == 0 && white[2] == 0 && white[3] == 1){// if a0 = a1 = a2 = black; a3 = white: it is a right angle to the left
      stop();
      c1 = 1;
    }else if (white[0] == 1 && white[1] == 0 && white[2] == 0 && white[3] == 0){// if a0 = white; a1 = black = a2 = a3 = black: it is a right angle to the right
      stop();
      c1 = 2;
    }else{
      stop();
      c1 = 3;
    }
